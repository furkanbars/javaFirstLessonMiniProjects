package intro;

public class Main {
	public static void main(String[] args) {
		
		double dolarYesterday = 18.15;
		double dolarToday = 18.25;
		boolean isOk = true;
		System.out.print("Dolar dün : "+dolarYesterday);
		System.out.print("Dolar bugün : "+dolarToday);
		
			if (dolarToday>dolarYesterday) {
				System.out.print("Dolar dün : "+dolarYesterday);
				System.out.print("Dolar bugün : "+dolarToday);
				System.out.println("Dolar yükseldi");
			}
			else {
				System.out.print("Dolar dün : "+dolarYesterday);
				System.out.print("Dolar bugün : "+dolarToday);
				System.out.println("Dolar düştü");
			}
	}
}
